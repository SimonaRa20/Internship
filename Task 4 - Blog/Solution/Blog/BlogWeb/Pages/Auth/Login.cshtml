@page
@model BlogWeb.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div id="loginMessage" class="text-danger"></div>


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4">Login</h2>
            <form id="post" asp-page="./Login">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group row">
                <div class="col-3">
                    <label asp-for="UserLoginRequest.Email"></label>
                </div>
                <div class="col-5">
                    <input type="text" asp-for="UserLoginRequest.Email" class="form-control"/>
                </div>
                <span class="text-danger" asp-validation-for="UserLoginRequest.Email"></span>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="UserLoginRequest.Password"></label>
                    </div>
                    <div class="col-5">
                        <input type="password" asp-for="UserLoginRequest.Password" class="form-control" />
                    </div>
                    <span class="text-danger" asp-validation-for="UserLoginRequest.Password"></span>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <input type="submit" class="btn btn-primary" value="Login" />
                    </div>
                </div>
            </form>
            <a asp-page="./ForgotPassword">Forgot Password?</a>
        </div>
    </div>
</div>