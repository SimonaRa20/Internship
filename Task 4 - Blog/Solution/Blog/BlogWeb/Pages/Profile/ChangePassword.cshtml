@page
@model BlogWeb.Pages.Profile.ChangePasswordModel
@{
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4">Change Password</h2>
            <form id="post" asp-page="./ChangePassword">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="UserChangePassword.CurrentPassword"></label>
                    </div>
                    <div class="col-5">
                        <input type="password" asp-for="UserChangePassword.CurrentPassword" class="form-control" />
                    </div>
                    <span class="text-danger" asp-validation-for="UserChangePassword.CurrentPassword"></span>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="UserChangePassword.NewPassword"></label>
                    </div>
                    <div class="col-5">
                        <input type="password" asp-for="UserChangePassword.NewPassword" class="form-control" />
                    </div>
                    <span class="text-danger" asp-validation-for="UserChangePassword.NewPassword"></span>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="UserChangePassword.ConfirmPassword"></label>
                    </div>
                    <div class="col-5">
                        <input type="password" asp-for="UserChangePassword.ConfirmPassword" class="form-control" />
                    </div>
                    <span class="text-danger" asp-validation-for="UserChangePassword.ConfirmPassword"></span>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <input type="submit" class="btn btn-primary" value="Change Password" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>